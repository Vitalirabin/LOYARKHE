<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kheloyar_splash_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kheloyar_splach_foreground">

        <LinearLayout
            android:layout_width="440dp"
            android:layout_height="440dp"
            android:layout_gravity="center"
            android:background="@drawable/kheloyar_splash_circle"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/loading"
                android:textColor="@color/kheloyar_splash_text_color"
                android:textSize="@dimen/kheloyar_splash_text_size"
                app:fontFamily="@font/bevan" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kheloyar_custom_progress_bar"
                android:paddingHorizontal="10.5dp">

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/kheloyar_progress_bar"
                    android:layout_width="300dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    app:indicatorColor="@color/kheloyar_splash_text_color"
                    app:trackColor="@color/kheloyar_transparent"
                    app:trackCornerRadius="3dp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>